<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_appointment_report_wizard_form" model="ir.ui.view">
        <field name="name">appointment.report.wizard.form</field>
        <field name="model">appointment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Appointment Report">
                <sheet>
                    <group>
                        <group string="Date Range">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>

                    <!-- Tree view for appointments -->
                    <field name="appointment_ids" readonly="1">
                        <tree string="Appointments" editable="false">
                            <field name="reference"/>
                            <field name="patient_id"/>
                            <field name="date_appointment"/>
                            <field name="total_qty"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_export_excel"
                            string="Export to Excel"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_appointment_report_wizard" model="ir.actions.act_window">
        <field name="name">Appointment Report</field>
        <field name="res_model">appointment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'search_default_filter_appointments': 1}</field>
    </record>
</odoo>