<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_appointment_pdf_wizard_form" model="ir.ui.view">
            <field name="name">appointment.pdf.wizard.form</field>
            <field name="model">appointment.pdf.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Appointment Report">
                    <sheet>
                        <group>
                            <group string="Filter Criteria">
                                <field name="patient_id" string="Patient" widget="many2one" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>

                        <!-- Appointments Tree View -->
                        <div class="mt-4">
                            <h4>Filtered Appointments</h4>
                            <field name="appointment_ids" readonly="1">
                                <tree string="Appointments">
                                    <field name="reference" string="Reference"/>
                                    <field name="patient_id" string="Patient"/>
                                    <field name="date_appointment" string="Appointment Date"/>
                                    <field name="total_qty" string="Quantity"/>
                                </tree>
                            </field>
                        </div>

                        <!-- Footer Buttons -->
                        <footer>
                            <button string="Cancel" special="cancel" class="btn-secondary"/>
                            <button name="action_appointment_pdf_wizard_report" string="Print PDF"
                                    class="btn-primary"
                                    type="object"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_appointment_pdf_wizard" model="ir.actions.act_window">
            <field name="name">Generate Appointment Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">appointment.pdf.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hospital_appointment"/>
            <field name="binding_type">action</field>
        </record>
    </data>
</odoo>